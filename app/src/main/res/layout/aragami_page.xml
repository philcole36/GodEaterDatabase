<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="280dp"
                android:layout_height="221dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name_heading"
                    android:textColor="@color/textColor"
                    android:background="@color/colorAccent"
                    android:fontFamily="Helvetica"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="322dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor"
                    android:background="@color/colorPrimary"
                    android:fontFamily="Helvetica"/>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="427dp"
                android:layout_height="1dp"
                android:background="@color/textColor" />

            <TextView
                android:id="@+id/details_title"
                android:layout_width="90dp"
                android:layout_height="19dp"
                android:background="@color/colorAccent"
                android:fontFamily="Helvetica"
                android:text="@string/detail_heading"
                android:textColor="@color/textColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="Helvetica"
                android:textColor="@color/textColor"
                android:textStyle="italic" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/weakness_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:fontFamily="Helvetica"
                        android:text="@string/weakness_heading"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/weakness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:background="@color/colorPrimary"
                        android:fontFamily="Helvetica"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/textColor"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="241dp"
                    android:layout_height="39dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bonds_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bonds_heading"
                        android:background="@color/colorAccent"
                        android:fontFamily="Helvetica"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/bonds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:background="@color/colorPrimary"
                        android:fontFamily="Helvetica"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>